{
  "name": "FreeTab",
  "version": "0.0.1",
  "manifest_version": 2,
  "description": "__MSG_extension_description__",
  "homepage_url": "http://github.com/seveneightn9ne/freetab",
  "icons": {
    "16": "icons/icon16.png", // TODO 
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "default_locale": "en",
  "background": {
    "scripts": [
      "js/background.js"
    ],
    "persistent": false
  },
  // "options_page": "src/options_custom/index.html", // TODO options page
  "browser_action": {
    "default_icon": "icons/icon19.png",
    "default_title": "FreeTab",
    // "default_popup": "src/browser_action/browser_action.html"
  },
  "permissions": [
    "chrome://favicon/",
    "tabs",
    "storage"
  ]
}